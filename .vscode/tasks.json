{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Werror",
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wsign-conversion",
                "-std=c++17",
                "-o main.out",
                "*.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}